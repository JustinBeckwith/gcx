{
  "name": "gcx",
  "version": "0.0.3",
  "description": "An API and CLI for deploying Google Cloud Functions in Node.js.",
  "bin": {
    "gcx": "./build/src/cli.js"
  },
  "main": "./build/src/index.js",
  "types": "./build/src/index.d.ts",
  "files": [
    "build/src",
    "src/.gcloudignore"
  ],
  "scripts": {
    "test": "nyc mocha build/test --require source-map-support/register --timeout 60000",
    "check": "gts check",
    "compile": "tsc -p .",
    "fix": "gts fix",
    "prepare": "npm run compile",
    "pretest": "npm run compile",
    "posttest": "npm run check",
    "watch": "tsc -p . --watch",
    "coverage": "nyc report --reporter=json && codecov -f coverage/*.json"
  },
  "keywords": [
    "google",
    "cloud",
    "functions",
    "serverless"
  ],
  "author": "Justin Beckwith <justin.beckwith@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "archiver": "^3.0.0",
    "globby": "^9.0.0",
    "google-auth-library": "^2.0.1",
    "googleapis": "^36.0.0",
    "meow": "^5.0.0",
    "node-fetch": "^2.3.0",
    "ora": "^3.0.0",
    "update-notifier": "^2.5.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/archiver": "^2.1.2",
    "@types/globby": "^8.0.0",
    "@types/meow": "^5.0.0",
    "@types/mocha": "^5.2.5",
    "@types/nock": "^9.3.0",
    "@types/node": "^10.12.7",
    "@types/node-fetch": "^2.1.3",
    "@types/ora": "^3.0.0",
    "@types/update-notifier": "^2.5.0",
    "@types/uuid": "^3.4.4",
    "assert-rejects": "^1.0.0",
    "codecov": "^3.1.0",
    "gts": "^0.9.0",
    "mocha": "^5.2.0",
    "nock": "^10.0.2",
    "node-stream-zip": "^1.7.0",
    "nyc": "^13.1.0",
    "source-map-support": "^0.5.9",
    "typescript": "~3.2.0"
  },
  "nyc": {
    "exclude": [
      "build/test"
    ]
  }
}
