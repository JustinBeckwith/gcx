{
  "name": "gcx",
  "version": "3.1.1",
  "description": "An API and CLI for deploying Google Cloud Functions in Node.js.",
  "bin": {
    "gcx": "./build/src/cli.js"
  },
  "main": "./build/src/index.js",
  "type": "module",
  "types": "./build/src/index.d.ts",
  "files": [
    "build/src",
    "src/.gcloudignore"
  ],
  "repository": "JustinBeckwith/gcx",
  "scripts": {
    "test": "c8 mocha build/test",
    "compile": "tsc -p .",
    "prepare": "npm run compile",
    "pretest": "npm run compile",
    "watch": "tsc -p . --watch",
    "coverage": "c8 report --reporter=lcov",
    "fix": "biome check --write .",
    "lint": "biome check ."
  },
  "keywords": [
    "google",
    "cloud",
    "functions",
    "serverless"
  ],
  "engines": {
    "node": ">=20"
  },
  "author": "Justin Beckwith <justin.beckwith@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@google-cloud/functions": "^4.2.1",
    "archiver": "^7.0.0",
    "globby": "^16.0.0",
    "meow": "^14.0.0",
    "ora": "^9.0.0",
    "update-notifier": "^7.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.3",
    "@types/archiver": "^7.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^24.0.0",
    "@types/sinon": "^21.0.0",
    "@types/update-notifier": "^6.0.0",
    "c8": "^11.0.0",
    "mocha": "^11.0.0",
    "nock": "^14.0.0",
    "node-stream-zip": "^1.15.0",
    "sinon": "^21.0.0",
    "typescript": "~5.9.0"
  },
  "c8": {
    "exclude": [
      "build/test"
    ]
  }
}
