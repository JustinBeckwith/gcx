{
  "name": "gcx",
  "version": "0.0.0",
  "description": "An API and CLI for deploying Google Cloud Functions in Node.js.",
  "bin": {
    "gcx": "./build/src/cli.js"
  },
  "main": "./build/src/index.js",
  "type": "module",
  "types": "./build/src/index.d.ts",
  "files": [
    "build/src",
    "src/.gcloudignore"
  ],
  "repository": "JustinBeckwith/gcx",
  "scripts": {
    "test": "c8 mocha build/test",
    "compile": "tsc -p .",
    "prepare": "npm run compile",
    "pretest": "npm run compile",
    "watch": "tsc -p . --watch",
    "coverage": "c8 report --reporter=json",
    "fix": "biome check --write .",
    "lint": "biome check ."
  },
  "keywords": [
    "google",
    "cloud",
    "functions",
    "serverless"
  ],
  "engines": {
    "node": ">=16"
  },
  "author": "Justin Beckwith <justin.beckwith@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "archiver": "^7.0.0",
    "globby": "^14.0.0",
    "googleapis": "^152.0.0",
    "meow": "^13.0.0",
    "node-fetch": "^3.3.2",
    "ora": "^8.0.0",
    "update-notifier": "^7.0.0",
    "uuid": "^11.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@types/archiver": "^6.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^22.0.0",
    "@types/sinon": "^17.0.0",
    "@types/update-notifier": "^6.0.0",
    "@types/uuid": "^10.0.0",
    "c8": "^10.0.0",
    "mocha": "^11.0.0",
    "nock": "^13.2.4",
    "node-stream-zip": "^1.15.0",
    "semantic-release": "^24.0.0",
    "sinon": "^19.0.0",
    "typescript": "~5.7.0"
  },
  "c8": {
    "exclude": [
      "build/test"
    ]
  }
}
